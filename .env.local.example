# Copy this file to .env.local and fill in your values

# Site Configuration (for local development)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/fuckit_music_local"

# Optional: Podcast Index API (for V4V features)
PODCAST_INDEX_API_KEY=your_key_here
PODCAST_INDEX_API_SECRET=your_secret_here

# Optional: CDN Configuration (can be omitted for local dev)
NEXT_PUBLIC_CDN_URL=http://localhost:3000
NEXT_PUBLIC_STORAGE_URL=http://localhost:3000

# Optional: Image domain
NEXT_PUBLIC_IMAGE_DOMAIN=localhost